@model ChatEmcriptacion.usuario

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style=" padding-left:100px">
    <h2 style="padding-left:100px">REGISTRO DE USUARIOS</h2>
    <h4 style="padding-left:300px">Datos del usuario</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="padding-left:100px">
        <label class="control-label col-md-2">Nombres</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombres, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombres, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding-left:100px">
        <label class="control-label col-md-2">Apellidos</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.apellidos, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.apellidos, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding-left:100px">
        <label class="control-label col-md-2">Correo</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding-left:100px">
        <label class="control-label col-md-2">Contraseña</label>
        <div class="col-md-10">
            @Html.PasswordFor(model => model.contrasenia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.contrasenia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding-left:100px">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar" class="btn btn-success" />
            <a href="/"> <input type="button" value="Cancelar" class="btn btn-danger"></a>
        </div>
       
           
        
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
